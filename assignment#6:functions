<?php
if (!function_exists('countWords')) {
    /**
     * Count words
     *
     * @param string $word
     * @param string $url
     *
     * @return string
     */
    function countWords($word, $url='http://en.wikipedia.org/wiki/Miles_Davis')
    {
        $text    = file_get_contents($url);
        $count   = substr_count($text, $word);
        $message = sprintf('<div class="result">Ordet:</br> <u><em>%s</em></u></br> söktes på </br> %s </br> och hittades </br><b>%d</b> gånger.</div>', $word, $url, $count);

        return $message;
    }
}
